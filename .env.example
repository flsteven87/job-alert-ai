# Job Alert AI - 環境變數範例文件
# 複製此文件到 .env 並填入你的實際值

# === API 金鑰 ===
# Jina AI API 金鑰 (用於網頁爬取與處理)
JINA_API_KEY=your_jina_api_key_here

# OpenAI API 金鑰 (用於職缺分析和匹配)
OPENAI_API_KEY=your_openai_api_key_here

# === 資料庫設定 ===
# Supabase 連線資訊
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# === 認證設定 ===
# Google OAuth 設定
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT 設定
JWT_SECRET=generate_a_secure_random_string_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# === 電子郵件設定 ===
# 用於發送通知郵件
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=Job Alert AI <no-reply@example.com>
EMAIL_USE_TLS=True

# === 應用設定 ===
# 後端 API 設定
BACKEND_CORS_ORIGINS=["http://localhost:8000", "http://localhost:3000", "http://localhost:8501"]
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit 前端設定
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_HEADLESS=True
STREAMLIT_THEME_BASE=light

# === 爬蟲設定 ===
# 職缺爬取頻率 (cron 格式)
JOB_CRAWL_SCHEDULE="0 0 * * *"  # 每天午夜運行

# 職缺匹配閾值 (0-100)
JOB_MATCH_THRESHOLD=60

# === 日誌設定 ===
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# === 開發模式設定 ===
DEBUG=False
ENVIRONMENT=development  # development, testing, production 